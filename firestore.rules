rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Blog Posts Collection - Public read, authenticated write
    match /blog-posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null; // ✅ SECURE: Only authenticated users
    }
    
    // Classes Collection - Public read, authenticated write
    match /classes/{classId} {
      allow read: if true;
      allow write: if request.auth != null; // ✅ SECURE: Only authenticated users
    }
    
    // Users Collection - Only admins can manage users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // In production, check for admin role
    }
    
    // Pages Collection - Public read, authenticated write
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can edit pages
    }
    
    // Volunteers Collection - Public read, authenticated write
    match /volunteers/{volunteerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Events Collection - Public read, authenticated write
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Contact Messages - Authenticated write only
    match /contact-messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if true; // Anyone can submit contact form
      allow update, delete: if request.auth != null;
    }

    // Settings Collection - Public read, authenticated write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: Deny all access to other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
